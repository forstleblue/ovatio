{
    "compilerOptions": {
        "outDir": "./client/dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es2016",
        "jsx": "react",
        "watch": true,
        "allowJs" :true,
        "noImplicitUseStrict":false,
        "experimentalDecorators": true,
        "alwaysStrict":false,    
    
        "allowSyntheticDefaultImports": false,
        "noStrictGenericChecks": true,
        "baseUrl": ".", // This must be specified if "paths" is.
        "types":[
            "datatables.net"
        ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "./client/node_modules/@types",
            "node_modules/@types"
         ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./client/src/**/*"        
    ]
}